<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><%= @article[:title]%> </h5>
            <p class="card-text"><%= @article[:content]%></p>
            <%= link_to  "Edit", edit_article_path, class:"btn btn-success card-link" %>
            <%= link_to  "Go Back", articles_path, class:"btn btn-dark card-link"%>
            <%= link_to  "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure ?"}, class:"btn btn-danger card-link" %>
        </div>
    </div>
</div>